<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:views="clr-namespace:LPGSavings.Views" 
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit" 
             xmlns:components="clr-namespace:LPGSavings.Controls"
             xmlns:effects="clr-namespace:LPGSavings.Effects" xmlns:viewmodels="clr-namespace:LPGSavings.ViewModels"
             BackgroundColor="Transparent"
             x:DataType="viewmodels:IntroViewModel"
             x:Class="LPGSavings.Views.IntroForms.FirstStepView">
  <ContentView.Content>
        <StackLayout Margin="20">  
            <Label Margin="20,30,10,30"
                        FontSize="30">Wypełnij formularz [1/2]</Label>
            <components:OutlinedMaterialEntry   PlaceholderText="Całkowity przebieg pojazdu [km]*"
                                                    ReturnType="Next"
                                                Text="{Binding Odometer,Mode=TwoWay}"
                                                    BackgroundColor="#f3f3f3"
                                                    HelperText="Przykładowa wartość: 10 000 km (WYMAGANE)" />
            <components:OutlinedMaterialEntry   PlaceholderText="Przejechane na LPG [km]"
                                                    ReturnType="Next"
                                                Text="{Binding OdometerLPG,Mode=TwoWay}"
                                                    BackgroundColor="#f3f3f3"
                                                    HelperText="Przykładowa wartość: 0 km" />
            <Grid>
                <pancakeview:PancakeView Padding="14,0"
                                             Margin="0,12,0,0"
                                         CornerRadius="10">
                    <pancakeview:PancakeView.Border>
                        <pancakeview:Border Thickness="1"
                                            Color="#6B6B6B" />
                    </pancakeview:PancakeView.Border>
                    <DatePicker  HorizontalOptions="FillAndExpand"
                                 TextColor="#6B6B6B"
                                     Format="dd.MM.yyyy">
                        <DatePicker.Effects>
                            <effects:RemoveEntryUnderline />
                        </DatePicker.Effects>
                    </DatePicker>
                </pancakeview:PancakeView>
                <Label FontSize="16"
                       BackgroundColor="#f3f3f3"
                       TextColor="#6B6B6B"
                       VerticalOptions="Start"
                       Margin="10,0,0,0"
                       Padding="5,0"
                       HorizontalOptions="Start">Data założenia instalacji LPG:</Label>
            </Grid>


            <pancakeview:PancakeView    Padding="14,8"
                                        VerticalOptions="EndAndExpand"
                                        Margin="0,40"
                                        behaviors:TouchEffect.NativeAnimation="True"
                                        behaviors:TouchEffect.Command="{Binding CarCreationMoveToSecondStep}"
                                        HorizontalOptions="Center" 
                                        CornerRadius="25">
                <pancakeview:PancakeView.Border>
                    <pancakeview:Border Thickness="1"
                                            Color="{StaticResource PrimaryColorDark}" />
                </pancakeview:PancakeView.Border>
                <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center">
                    <Label VerticalTextAlignment="Center"
                               FontSize="13"
                               TextColor="{StaticResource PrimaryColorDark}"
                               FontAttributes="Bold">Pogadajmy o kosztach</Label>
                    <Label Text="&#xf054;" 
                               FontSize="15"
                               TextColor="{StaticResource PrimaryColorDark}"
                               VerticalTextAlignment="Center"
                               FontFamily="fas"/>
                </StackLayout>
            </pancakeview:PancakeView>
        </StackLayout>
    </ContentView.Content>
</ContentView>