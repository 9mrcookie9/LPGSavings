<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:views="clr-namespace:LPGSavings.Views" 
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit" 
             xmlns:components="clr-namespace:LPGSavings.Controls"
             xmlns:effects="clr-namespace:LPGSavings.Effects"
             xmlns:introforms="clr-namespace:LPGSavings.Views.IntroForms" xmlns:partials="clr-namespace:LPGSavings.Views.Partials"
             BackgroundColor="#f3f3f3"
             x:Class="LPGSavings.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#3d3d3d" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="#3d3d3d" />
            </Style>
        </ResourceDictionary> 
    </ContentPage.Resources>
    <ScrollView>
        <Grid RowDefinitions="80,*"
              RowSpacing="0">
           <partials:TitleHeaderView />
            <Grid x:Name="mainGridHolder" Grid.Row="1">
               <views:FirstWelcomeView />
            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>
